<project name="MyProject" default="compile" basedir=".">
  <target name="compile" description="Compiling..." >
    <exec executable="cmd">
      <arg value="/c"/>
      <arg value="runmsbuild.bat"/>
      <arg value="-p"/>
    </exec>
    <exec executable="pasdoc.exe">
      <arg value="--output docs"/>
      <arg value="--name DelphiMSBuild2"/>
      <arg value="--write-uses-list"/>
      <arg value="MainForm.pas ReceiverForm.pas"/>
    </exec>             
  </target>
</project>
